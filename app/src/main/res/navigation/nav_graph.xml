<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="ru.ilsave.testtask.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_infoActivity"
            app:destination="@id/infoActivity" />
    </activity>
    <activity
        android:id="@+id/infoActivity"
        android:name="ru.ilsave.testtask.ui.activities.InfoActivity"
        android:label="activity_info"
        tools:layout="@layout/activity_info" />
</navigation>